<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, as: :text %>
    <%= f.input :content, as: :text  %>
    <%= f.input :metadata, as: :text  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
